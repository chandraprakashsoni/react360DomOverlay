{
  "name": "scapic_react_360",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build-css": "node-sass-chokidar static_assets/ -o static_assets/",
    "watch-css": "npm run build-css && node-sass-chokidar static_assets/ -o static_assets/ --watch --recursive",
    "start-js": "node -e \"console.log('open browser at http://localhost:8081/index.html\\n\\n');\" && node node_modules/react-native/local-cli/cli.js start",
    "start": "npm-run-all -p watch-css start-js",
    "bundle": "node node_modules/react-360/scripts/bundle.js",
    "open": "node -e \"require('xopen')('http://localhost:8081/index.html')\"",
    "devtools": "react-devtools",
    "test": "jest"
  },
  "dependencies": {
    "node-sass-chokidar": "^1.3.3",
    "npm-run-all": "^4.1.3",
    "react": "16.0.0",
    "react-360": "~1.0.0",
    "react-360-web": "~1.0.0",
    "react-dom": "16.0.0",
    "react-native": "~0.49.5",
    "scrollreveal": "^4.0.2",
    "three": "^0.87.0"
  },
  "devDependencies": {
    "babel-jest": "^19.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-native": "^1.9.1",
    "jest": "^19.0.2",
    "react-devtools": "^2.5.2",
    "react-test-renderer": "16.0.0",
    "xopen": "1.0.0"
  },
  "jest": {
    "preset": "react-360"
  }
}
